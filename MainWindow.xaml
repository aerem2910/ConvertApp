<Window x:Class="ImageConversion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageConversion"
        mc:Ignorable="d"
        Height="400" Width="400" 
        Background="#303030">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Content="Loading Image" Height="30" Width="100" Click="ButtonLoadImage_Click"/>

        <ListBox x:Name="lb" Grid.Row="1" MouseDoubleClick="lb_MouseDoubleClick"/>
    </Grid>
</Window>
